<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/imageView3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/stdnt"

        android:layout_marginBottom="10dp" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/callstd"
        android:src="@android:drawable/sym_action_call"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/callparent"
        android:layout_alignStart="@+id/callparent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OR"
        android:id="@+id/textView2"
        android:textColor="#e74c3c"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_below="@+id/editTextmassage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:id="@+id/editTextmassage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView3"
        android:layout_marginRight="40dp"
        android:background="#ffff"
        android:textColor="@color/colorPrimary"
        android:textSize="18dp"
        android:paddingLeft="5dp"
        android:hint="Type your Message"
        android:inputType="text"
        android:layout_marginTop="20dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:id="@+id/msgstd"
        android:src="@android:drawable/ic_menu_send"
        android:cropToPadding="false"
        android:layout_alignBottom="@+id/editTextmassage"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@android:color/transparent"
        android:scaleType="fitXY" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/mailstd"
        android:src="@android:drawable/sym_action_email"
        android:background="@android:color/transparent"
        android:layout_below="@+id/textView2"
        android:layout_toRightOf="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView3"
        android:scaleType="fitXY" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Parent Section"
        android:id="@+id/textView3"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student Section"
        android:id="@+id/textView4"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:layout_above="@+id/editTextmassage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/callparent"
        android:src="@android:drawable/sym_action_call"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        android:layout_below="@+id/or"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/mailparent"
        android:src="@android:drawable/sym_action_email"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        android:layout_below="@+id/or"
        android:layout_alignLeft="@+id/mailstd"
        android:layout_alignStart="@+id/mailstd" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:id="@+id/editTextmassage2"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="40dp"
        android:background="#fff"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:hint="Type your Message for Parents"
        android:paddingLeft="5dp"
        android:textSize="18dp"
        android:inputType="text" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="45dp"
        android:id="@+id/msgparent"
        android:src="@android:drawable/ic_menu_send"
        android:background="@android:color/transparent"
        android:layout_alignBottom="@+id/editTextmassage2"
        android:layout_alignLeft="@+id/msgstd"
        android:layout_alignStart="@+id/msgstd"
        android:scaleType="fitXY" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OR"
        android:id="@+id/or"
        android:textColor="#e74c3c"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_below="@+id/editTextmassage2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginTop="5dp" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/detailStd"
        android:layout_below="@+id/callstd"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:src="@android:drawable/ic_menu_info_details"
        android:background="@android:color/transparent" />


</RelativeLayout>
