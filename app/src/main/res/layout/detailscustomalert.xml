<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_height="wrap_content"
    android:layout_width="500dp"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    app:cardCornerRadius="10dp"

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
        <TextView
        android:layout_width="110dp"
        android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:text="Name"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="18dp" />
            <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:textSize="15dp"
                android:id="@+id/customname"
                android:layout_marginLeft="5dp" />

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
        android:layout_width="110dp"
        android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:text="Email"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="18dp" />
            <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:textSize="15dp"
                android:id="@+id/customemail"
                android:layout_marginLeft="5dp" />

        </LinearLayout>



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
        android:layout_width="110dp"
        android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:text="Phone #"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="18dp" />
            <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:textSize="15dp"
                android:id="@+id/customNumb"
                android:layout_marginLeft="5dp" />

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
        android:layout_width="110dp"
        android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:text="Roll #"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="18dp" />
            <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:textSize="15dp"
                android:id="@+id/customRollNum"
                android:layout_marginLeft="5dp" />

        </LinearLayout>



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
        android:layout_width="110dp"
        android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:text="Class"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="18dp" />
            <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:textSize="15dp"
                android:id="@+id/customSection"
                android:layout_marginLeft="5dp" />

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
        android:layout_width="110dp"
        android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:text="Gender"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="18dp" />
            <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:textSize="15dp"
                android:id="@+id/customGender"
                android:layout_marginLeft="5dp" />

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
        android:layout_width="110dp"
        android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:text="Parent mail"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="18dp" />
            <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:textSize="15dp"
                android:id="@+id/customPmail"
                android:layout_marginLeft="5dp" />

        </LinearLayout>



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">
        <TextView
        android:layout_width="110dp"
        android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:text="Parent Num"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="18dp" />
            <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:textSize="15dp"
                android:id="@+id/customPnum"
                android:layout_marginLeft="5dp" />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>